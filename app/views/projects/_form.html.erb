<%= render 'shared/errors', obj: @project %>

<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@project, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :title, "Experience" %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Experience Title", autofocus: true %>
        </div>
      </div>
      <!--divide-->
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description, "Domain" %>
        </div>
        <div class="dropdown col-sm-8">
          <%= f.select :description, options_for_select([
            ["", ""], 
            "Security", 
            "Merchandising", 
            "Infrastructure", 
            "something", 
            "something else"]), 
            {}, { class: "form-control", autofocus: true } %>
        </div>
      </div>
      <!--divide-->
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :pm, "Product Manager" %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :pm, class: "form-control", placeholder: "Product Manager's Name", autofocus: true %>
        </div>
      </div>
      <!--divide-->
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :dev, "Developer(s)" %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :dev, class: "form-control", placeholder: "Developer Name(s)", autofocus: true %>
        </div>
      </div>
      <!--divide-->
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :arch, "Architect" %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :arch, class: "form-control", placeholder: "Architect's Name", autofocus: true %>
        </div>
      </div>
      <!--divide-->
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :sap, "SAP-ID" %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :sap, class: "form-control", placeholder: "SAP-ID for Domain", autofocus: true %>
        </div>
      </div>
      
      <!--divide-->
      <div class="form-group">
        <div class="control-label col-sm-2">
        </div>
        <div class="col-sm-8">
          Below fields will be completed by the performance engineer:
        </div>
      </div>
      
      <!--divide-->
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :sap, "Status" %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :sap, class: "form-control", placeholder: "Test Status Health", autofocus: true %>
        </div>
      </div>
      
      <!--divide-->
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :sap, "Performance Engineer" %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :sap, class: "form-control", placeholder: "Assigned Engineer", autofocus: true %>
        </div>
      </div>
      
        
      <!--divide-->
      <div class="form-group">
        <div class="col-sm-offset-5 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
    
    <!--divide-->
    <div class="col-xs-4 col-xs-offset-2">
      [ <%= link_to "Cancel request and return to home", root_path %> ]
    </div>
  </div>
</div>