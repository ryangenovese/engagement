<h2 align="center">Project Name: <%= @project.title %></h2>

<div class="well col-xs-8 col-xs-offset-2">
  <%# if @project.user %>
   <ul class="listing">
      <div class="row center">
        <div class="col-md-4 col-md-offset-4">
          <li>Created By:</li>
          <li><%#= link_to gravatar_for(@project.user), user_path(@project.user) %></li>
          <li class="project-title">
            <%#= link_to @project.user.username, user_path(@project.user) %>
          </li>
          <li><small>
            <%#= pluralize(@project.user.projects.count, "project") if @project.user.projects %>
          </small></li>
        </div>
      </div>
    </ul>
  <%# end %>
  <h4 class="center description"><strong>Description:</strong></h4>
  <hr>
  <%#= simple_format(@project.description) %>
  <div class="project-actions">
    <%# if logged_in? && (current_user == @project.user || current_user.admin?) %>
    <%= link_to "Edit this project", edit_project_path(@project), class: "btn btn-xs btn-primary" %>
    <%= link_to "Delete this project", project_path(@project), method: :delete,
                                        data: {confirm: "Are you sure you want to delete the project?"}, 
                                        class: "btn btn-xs btn-danger" %>
    <%# end %>
    <%= link_to "View all projects", projects_path, class: "btn btn-xs btn-success" %>
  </div>
</div>